<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#446cb3"
    tools:context=".InputRequestData">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

    </FrameLayout>

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text=" Rating: 0.0 "
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#446cb3"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="7sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/textViewEmails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogout"
        android:layout_centerHorizontal="true"
        android:text="EmailUser"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logoprofile" />

    <EditText
        android:id="@+id/editTextRequestName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMap"
        android:layout_centerHorizontal="true"
        android:hint="Enter Request Name"
        android:textColorHint="#ffffff"
        android:inputType="textPersonName"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonAddRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:text="Add Request"
        android:textColor="#446cb3" />

    <EditText
        android:id="@+id/editTextRequestPhone"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRequestName"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Phone 0 - 9"
        android:textColorHint="#ffffff"
        android:inputType="phone"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textViewMap"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Address"
        android:text="Maps"
        android:textAlignment="center"
        android:textColor="#68bb7a"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/fl"
        android:layout_centerHorizontal="true"
        android:text="My Profile"
        android:textColor="#446cb3"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl"
        android:layout_centerHorizontal="true"
        android:text="Input Request"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinnerahli3"
        android:layout_width="320dp"
        android:layout_height="40dp"


        android:layout_below="@+id/editTextRequestPhone"
        android:layout_centerHorizontal="true"
        android:background="#551c5268"
        android:entries="@array/Spinner1" />

    <Spinner
        android:id="@+id/spinnerahli4"
        android:layout_width="320dp"
        android:layout_height="40dp"

        android:layout_below="@+id/spinnerahli3"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/iconrequest" />

</RelativeLayout>