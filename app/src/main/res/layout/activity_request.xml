<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#446cb3"
    tools:context=".RequestActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

    </FrameLayout>

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text=" Rating: 0.0 "
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/fl"
        android:layout_centerHorizontal="true"
        android:text="My Profile"
        android:textColor="#446cb3"
        android:textSize="10sp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#446cb3"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="7sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/textViewEmails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonProfile"
        android:layout_centerHorizontal="true"
        android:text="EmailUser"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logoprofile" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl"
        android:layout_centerHorizontal="true"
        android:text="Request Detail"
        android:textColor="#322f2f"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewRequestKeahlian"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/divider20"
        android:layout_toEndOf="@+id/imageView"
        android:paddingTop="8dp"
        android:text="Skill"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewRequestNames"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_alignTop="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView"
        android:paddingTop="9dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_below="@+id/divider21"
        android:layout_toEndOf="@+id/imageView14"
        android:paddingTop="8dp"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewUserID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewRequestPhone"
        android:layout_toEndOf="@+id/imageView"
        android:paddingTop="8dp"
        android:text="Address"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textViewRequestPhone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textViewEmail"
        android:layout_below="@+id/divider19"
        android:paddingTop="7dp"
        android:text="Phone"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="45dp"
        android:layout_height="40dp"


        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/textViewUserID"
        app:srcCompat="@drawable/maps" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_above="@+id/divider21"
        android:layout_alignEnd="@+id/imageView"
        app:srcCompat="@drawable/adminid" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/textViewEmail"
        app:srcCompat="@drawable/adminemail" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/textViewRequestKeahlian"
        app:srcCompat="@drawable/adminskill" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textViewUserID"
        android:layout_alignEnd="@+id/imageView"
        app:srcCompat="@drawable/adminphone" />

    <View
        android:id="@+id/divider16"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/textViewUserID"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider19"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewRequestKeahlian"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider20"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewEmail"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider21"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        app:srcCompat="@drawable/iconrequest" />


    <Button
        android:id="@+id/buttonAcceptRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#43446cb3"
        android:text="Accept"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Mapbtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/buttonAcceptRequest"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:text="Check Location"
        android:textColor="#446cb3"
        android:textStyle="bold" />
</RelativeLayout>