<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/textViewRequestNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewEmail"
        android:text="Name: "
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewRequestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewRequestNames"
        android:layout_marginStart="141dp"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewRequestEmail"
        android:layout_marginStart="82dp"
        android:text="Email: "
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewRequestEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/textViewRequestName"
        android:layout_below="@+id/textViewRequestNames"
        android:text="Email"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/textViewRequestNames"
        android:layout_below="@+id/textViewEmail"
        android:text="Status: "
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewUserApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/textViewRequestName"
        android:layout_below="@+id/textViewEmail"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewUserReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/textViewRequestName"
        android:layout_below="@+id/textViewEmail"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logoprofile" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:background="@android:color/black"
        android:visibility="visible" />

</RelativeLayout>
