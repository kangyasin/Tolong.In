<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaf0f2"
    tools:context=".DetailUserActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ce000000">

    </FrameLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Logout"
        android:textSize="7sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/textViewEmails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogout"
        android:layout_centerHorizontal="true"
        android:text="EmailUser"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fl"
        android:background="#c2211f3d" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/admin" />


    <TextView
        android:id="@+id/textViewTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Detail User "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/textViewRequestNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewRequestPhone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="127dp"
        android:layout_toEndOf="@+id/skill"
        android:text="Phone"
        android:textAlignment="center"
        android:textColor="#c2211f3d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_above="@+id/divider8"
        android:layout_alignStart="@+id/editTextFullname"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#c2211f3d"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_above="@+id/divider10"
        android:layout_alignStart="@+id/textViewRequestPhone"
        android:text="Skill"
        android:textAlignment="center"
        android:textColor="#c2211f3d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewRating"
        android:layout_marginEnd="15dp"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="#c2211f3d"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextFullname"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_above="@+id/divider9"
        android:layout_alignStart="@+id/textViewRequestPhone"
        android:text="Password"
        android:textColor="#c2211f3d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewUserID"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/textViewRequestPhone"
        android:layout_alignTop="@+id/userid"
        android:text="userID"
        android:textColor="#c2211f3d"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/divider12"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-296dp"
        android:layout_marginStart="38dp"
        android:text="0.0"
        android:textColor="#c2211f3d"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        app:srcCompat="@drawable/logoprofile" />

    <ImageView
        android:id="@+id/password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/email"
        android:layout_alignTop="@+id/editTextFullname"
        app:srcCompat="@drawable/adminpassword" />

    <ImageView
        android:id="@+id/skill"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/editTextPhone"
        android:layout_toEndOf="@+id/imageView"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/adminskill" />

    <ImageView
        android:id="@+id/rating"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textViewUserStatus"
        android:layout_marginEnd="-38dp"
        android:layout_toStartOf="@+id/textViewRating"
        app:srcCompat="@drawable/adminrating" />

    <ImageView
        android:id="@+id/userid"
        android:layout_width="30dp"
        android:layout_height="20dp"

        android:layout_above="@+id/divider7"
        android:layout_alignStart="@+id/email"
        app:srcCompat="@drawable/adminid" />

    <ImageView
        android:id="@+id/phone3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textViewRequestPhone"
        android:layout_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/adminphone" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textViewEmail"
        android:layout_toEndOf="@+id/imageView"
        android:scaleType="center"
        app:srcCompat="@drawable/adminemail" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/rating"
        android:layout_toStartOf="@+id/textViewUserStatus"
        app:srcCompat="@drawable/adminstatus" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="5dp"


        android:layout_above="@+id/textViewEmail"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/editTextFullname"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider12"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="296dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider14"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/textViewUserStatus"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_above="@+id/editTextPhone"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/textViewRequestPhone"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />
    <Button
        android:id="@+id/buttonAllUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCheckHistory"
        android:layout_alignParentStart="true"
        android:background="#c2211f3d"
        android:text="Change Status"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonCheckHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#c1ffffff"
        android:text="Check History Transaction"
        android:textSize="12sp" />


</RelativeLayout>