<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#446cb3"
    tools:context=".ProfileActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">

    </FrameLayout>

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/fl"
        android:layout_centerHorizontal="true"
        android:text="My Profile"
        android:textColor="#446cb3"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text=" Rating: 0.0 "
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#446cb3"
        android:text="Logout"
        android:textColor="@android:color/background_light"
        android:textSize="7sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/textViewEmails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonProfile"
        android:layout_centerHorizontal="true"
        android:text="EmailUser"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logoprofile" />

    <ListView
        android:id="@+id/listViewRequest"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="10dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textViewTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Help me!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonAllUser"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/menubutton"
        android:text="My Transaction"
        android:textColor="#446cb3"
        android:textSize="12sp" />

    <Button
        android:id="@+id/buttonMyRequestList"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonAllUser"
        android:background="@drawable/menubutton"
        android:text="My Request"
        android:textColor="#446cb3"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/buttonRequest"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonAllUser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/requestbtn"
        android:scaleType="matrix" />


</RelativeLayout>